<UserControl x:Name="userControl" x:Class="ICE_AssetLibrary.AssetIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICE_AssetLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="540">
    <Grid Name="MainGrid_Grid" Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Image x:Name="Image_Image"/>
        <MediaElement x:Name="Media_MediaElement" LoadedBehavior="Manual" Visibility="Hidden" ScrubbingEnabled="True"/>
        <TextBlock Name="nameTextBlock" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding FontSize, ElementName=userControl}"/>
    </Grid>
</UserControl>
