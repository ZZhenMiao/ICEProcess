<UserControl x:Class="ICE_AssetLibrary.ButtonTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICE_AssetLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="100">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="新建"/>
            <MenuItem Header="刷新"/>
            <MenuItem Header="关闭"/>
            <MenuItem Header="关闭其它"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid Name="grid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Name="button" Margin="4,0,24,0" Background="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2" HorizontalContentAlignment="Left">
        </Button>
        <Button Margin="5,2,5,2" Content="X" Name="closeButton" BorderBrush="{x:Null}" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Button>
    </Grid>
</UserControl>
