<Window x:Class="LiZhenWPF.SimpleProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiZhenWPF"
        mc:Ignorable="d"
        Title="正在执行..." WindowStyle="ToolWindow" Height="140" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Header_TextBlock" Text="任务名称" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16"/>
        <ProgressBar Name="ProgressBar_ProgressBar" Grid.Row="1" Height="12" Margin="8,0,8,0" />
        <Button Name="Stop_Button" Grid.Row="2" Width="76" Height="26" Content="中止"/>
    </Grid>
</Window>
